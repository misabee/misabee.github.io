extends ../../layouts/common.pug

block title
    title Tìm kiếm

block content

    div.container.products(id="product")
        div.row
            div.col.col-12
                h1='Kết quả tìm kiếm cho: ' + name
        div.row(id='products-search')
            if (products[0] != null) 
                each data in products
                    div(class="col-lg-4 col-md-6 mb-4 product-col")
                        div(class="card product-card")
                            a(class="img-link", href="/products/" + data._id)
                                img(class="card-img" src= data.image_brand alt="Card image")
                            div(class="card-body")
                                a(href="/products/" + data._id)
                                    h4(class="card-title")= data.name
                                h5(class="price")= data.price + '.000₫' 
            else
                div(class="col.col-12 mb-4 product-col" style=" flex: auto!important;")
                    div(class="alert alert-dark" role="alert" style="text-align: center;") Không tìm thấy kết quả phù hợp
                